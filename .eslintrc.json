{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "rules": {
        "@typescript-eslint/semi": "error",
        "eqeqeq": "error",
        "no-throw-literal": "warn",
        "object-curly-spacing": ["error", "always"],
        "eol-last": "error"
    }
}
