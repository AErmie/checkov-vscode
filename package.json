{
	"name": "bridgecrew",
	"displayName": "Bridgecrew",
	"description": "Scans infrastructure as code files for security misconfigurations. https://www.bridgecrew.io",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:checkov.scan-file"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "checkov.scan-file",
				"title": "Checkov Scan"
			}
		],
		"configuration": {
			"title": "Bridgecrew",
			"properties": {
				"bridgecrew.token": {
					"title": "Token",
					"type": "string",
					"description": "Add your Bridgecrew API token, you can find it in the integration section under `API token",
					"markdownDescription": true,
					"readOnly": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {}
}
